{
		{{if eq .Section "tags" "solutions" "staging" "series" "products" "categories" }}{{else}} 
		"id": "{{ with .File }}{{ .UniqueID }}{{ end }}",
		"title": "{{if .Title}}{{ .Title }}{{else}}{{ humanize .File.TranslationBaseName}}{{end}}",
		"version": "{{.Section}}",
		"description": "{{with .Description}} {{ . }} {{end}}",
		"date": "{{ .Date | time.Format ":date_long" }}",
		"author": "{{ with .Params.author}}{{.}}{{end}}",
		"uri": "{{ .Permalink }}",
		"body": {{ .Plain | jsonify }},
		"beta": "{{ with .Params.beta}} {{.}} {{end}}",
		"hidden": "{{ with .Params.hidden}} {{.}} {{end}}",
		"tags": [{{ range $tindex, $tag := .Params.tags }}{{ if $tindex }}, {{ end }}"{{ $tag| htmlEscape }}"{{ end }}]
		{{end}}
}
